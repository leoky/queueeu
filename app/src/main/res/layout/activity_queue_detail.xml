<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/small_hor_padd"
    tools:context=".Activity.QueueDetailActivity">

    <TextView
        android:id="@+id/namedoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="@dimen/h2"
        android:text="Dr. Davidson JR"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgNow"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/profile"
        android:layout_gravity="center"
        android:padding="@dimen/vsmall_hor_padd"
        android:layout_marginTop="@dimen/vsmall_ver_mar"
        android:layout_marginBottom="@dimen/vsmall_ver_mar"
        app:civ_circle_background_color="#FFF"
        app:civ_border_width="1dp"
        app:civ_border_color="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/h2"
        android:text="Clinic information"/>
    <TextView
        android:id="@+id/clinicname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="@dimen/h3"
        android:text="Klinik Indah Bersama"/>
    <TextView
        android:id="@+id/doctorstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3"
        android:text="Available / Open"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/vsmall_hor_mar"
        android:textSize="@dimen/h2"
        android:text="Waiting information"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="@dimen/h3"
        android:text="Queuee waiting"/>
    <TextView
        android:id="@+id/totalqueue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h1"
        android:text="13"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/vsmall_hor_mar"
        android:textSize="@dimen/h2"
        android:text="Notes"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert note here"/>

    <Button
        android:id="@+id/btn_queuee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="QUEUEE NOW"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/small_ver_mar"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white" />


</LinearLayout>